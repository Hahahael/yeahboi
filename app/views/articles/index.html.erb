<h1>All Posts (<%= @articles.size %>):</h1>
<ul id ="articles">
	<% @articles.each do |article| %>
		<li>
			<%= link_to article.title, article_path(article), class: 'article_title' %>
		</li>
	<% end %>
</ul>

<%= link_to "Create a new post", new_article_path, class: "new_article" %>

<br></br>

<%= link_to "Back to Home", root_path %>
<%= link_to "View all tags", tags_path %>
